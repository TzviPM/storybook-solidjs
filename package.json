{
  "name": "@storybook-solidjs/root",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "example",
      "packages/frameworks/*",
      "packages/renderers/*"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.13.0",
    "@fal-works/esbuild-plugin-global-externals": "^2.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.24.0",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-plugin-solid": "^0.6.0",
    "eslint": "^9.13.0",
    "eslint-plugin-depend": "^1.0.0",
    "execa": "^9.4.0",
    "fdir": "^6.4.2",
    "fs-extra": "^11.2.0",
    "globals": "^15.11.0",
    "husky": "^9.1.7",
    "jiti": "^2.3.3",
    "picomatch": "^4.0.2",
    "prettier": "^3.3.3",
    "pretty-hrtime": "^1.0.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "slash": "^5.1.0",
    "solid-js": "^1.9.3",
    "sort-package-json": "^2.10.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "type-fest": "^4.35.0",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.25.0",
    "vitest": "^2.1.4"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "check": "./self_check.sh",
    "check:all": "pnpm run check:lint && pnpm run check:test && pnpm run check:format",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:test": "vitest run --no-isolate",
    "clean": "find . -type d \\( -name 'dist' -o -name 'storybook-static' \\) -not -path '*/node_modules/*' -exec rm -rf {} + 2>/dev/null || true && rm -rf scripts/bench/esbuild-metafiles 2>/dev/null || true",
    "fix:all": "pnpm run fix:lint && pnpm run fix:format",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint . --fix",
    "test": "vitest",
    "commit": "cz",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
